<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/strip_bar_container"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_gravity="center|top"
    android:background="@drawable/strip_bar_background">

    <com.franktech.mia.ui.view.MiaTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/someone_is_interested"
        android:textColor="@android:color/white"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:textSize="18sp"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp">

        <ImageButton
            android:id="@+id/interested_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_hearts"
            android:background="?android:selectableItemBackground"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:textColor="@android:color/white"
            android:layout_gravity="end|bottom"
            android:text="105"/>
    </FrameLayout>


</RelativeLayout>