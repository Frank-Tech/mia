<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@drawable/regular_background"
    android:gravity="center">

    <com.franktech.mia.ui.view.MiaTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="25dp"
        android:textSize="45sp"
        android:lineSpacingExtra="8dp"
        android:textColor="@android:color/white"
        android:text="@string/may_i_title"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/heart_on_map"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/title"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_pin" />

    <com.franktech.mia.ui.view.MiaTextView
        android:id="@+id/see_in_real_life"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/heart_on_map"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textSize="40sp"
        android:lineSpacingExtra="8dp"
        android:textColor="@android:color/white"
        android:text="@string/see_in_real_life"
        android:gravity="center"/>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/open_with_facebook"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/see_in_real_life"
        android:layout_centerInParent="true"
        android:layout_margin="40dp"
        android:textAllCaps="false"
        android:textSize="20sp"/>

</RelativeLayout>
